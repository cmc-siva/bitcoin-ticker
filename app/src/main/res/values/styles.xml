<resources>

    <!-- Peter: Important to use "MaterialComponents" theme when using the latest material components!
         https://github.com/material-components/material-components-android/issues/298
     -->
    <style name="CMC.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textPrimaryColor">@color/cyan_800</item>
    </style>

    <style name="CMC.AppTheme.Widget.MaterialComponents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/mtrl_outlined_stroke_color</item>
        <item name="boxBackgroundColor">@color/dark_grey</item>
    </style>

    <!--
    Used an Theme Overlay just to exhibit the theme color overides
    -->
    <style name="ThemeOverlay.CMC.AppTheme.OrderPlacement" parent="">
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
    </style>
</resources>
